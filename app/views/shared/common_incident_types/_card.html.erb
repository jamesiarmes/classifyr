<div data-incident-id="<%= common_incident_type.id %>" data-classify-target="incidentTypeCard" class="bg-white border-gray-200 shadow rounded">
  <div class="p-8">
    <div class="text-xl font-bold pb-3"><%= common_incident_type.description %></div>
    <div class="text-sm text-gray-600 pb-2 h-10 line-clamp-2"><%= common_incident_type.notes %></div>
  </div>
  <div class="flex flex-row bg-neutral-100">
    <div class="px-8 py-6 w-50">
      <div class="text-sm text-gray-600 mb-4"><%= common_incident_type.standard %> Code</div>
      <div class="bg-blue-100 rounded-2xl px-5 py-1.5 text-md text-blue-600 ml-4"><%= common_incident_type.code %></div>
    </div>
    <div class="flex flex-grow justify-end px-8 w-50">
      <button data-action="click->classify#selectIncidentType" class="button h-12 self-center">
        Select
      </button>
      <button data-action="click->classify#deselectIncidentType mouseenter->classify#mouseenter mouseleave->classify#mouseleave" class="hidden button button-selected h-12 self-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 pr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 pr-2 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Selected
      </button>
    </div>
  </div>
</div>
